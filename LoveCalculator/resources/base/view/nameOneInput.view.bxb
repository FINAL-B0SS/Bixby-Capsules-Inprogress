input-view {
  match: NameOne

  message(Enter the first person's name please.)

  render {
    form {
      elements {
        text-input {
          id (NameOne)
          label (Name)
          required (true)
          type (NameOne)
        }
      }
      on-submit {
        goal: NameOne
        value: viv.core.FormElement(NameOne)
      }
    }
  }
}