action (UserAnswer) {
  type (Commit)
  description (check if the answer is correct)
  collect {
    input (constructedQuestion) {
      type (ConstructedQuestion)
      min (Required) max (One)
      default-init {
        intent {
          goal: ConstructQuestion
        }
      }
    }
    input (answer) {
      type (Answer)
      min (Required) max (One)
      prompt-behavior (AlwaysSelection)
    }
  }
  output (Answer)
}
