layout-macro-def (option) {
  params {
    param (option) {
     type (ConstructedOption)
      min (Required) max (One)
    }
  }
  content {
    title-card {
      title-area {
        slot1 {
          single-line {
            text ("#{value(option.option)}")
          }
        }
      }
      //on-click can be added later to check if the answer is correct
    }
  }
}