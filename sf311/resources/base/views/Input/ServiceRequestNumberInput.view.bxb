input-view {
  match: ServiceRequestNumber (this)
    message {
    template ("Enter the cases service request number below")
  }
  render {
    form {
      elements {
        text-input {
          id (serviceRequestNumber)
          type (ServiceRequestNumber)
          label (Search by name, id, location, or status)
          max-length (20)
        }
      }
      on-submit {
        goal: TrackCase
        value: viv.core.FormElement(serviceRequestNumber)
      }
    }
  }
}