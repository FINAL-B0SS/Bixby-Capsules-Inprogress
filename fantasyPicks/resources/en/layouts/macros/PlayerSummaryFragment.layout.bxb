layout-macro-def ("player-summary-fragment") {
  params {
    param (player) {
      type (PlayerStats)
      min(Required) max(One)
    }
  }
  content{
    compound-card {
      content {
        image-card {
          aspect-ratio(3:4)
          image-object-fit (Contain)
          image-url ("#{value(player.image.images[0].url)}")
          title-area {
            slot1 {
              if ("player.expertsPick == true") {
                text {
                  value ("üèÜ")
                  style (Title_L)
                }
              } else {
                text {
                  value ("")
                }
              }
            }
          }
        }
        single-line {
          text {
            value ("#{value(player.name)}")
            style(Title_M)
          }
        }
        paragraph {
          style(Detail_M)
          value("Pick Percentage: #{value(player.pick.percentage)}")
        }
        paragraph {
          value ("Injury note: #{value(player.misc.injury)}")
          style (Detail_M)
        }
      }
    }
  }
}