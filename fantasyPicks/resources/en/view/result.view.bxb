result-view {
  match {
    PlayerStats (this)
  }
  
  render {
    if ("size(this) > 1") {
      list-of (this) {
        where-each (player) {
          layout-macro (player-summary-fragment) {
            param (player) {
              expression (player)
            }
          }
        }
      }
    } else-if ("size(this) == 1") {
      layout-macro (player-details-fragment) {
        param (player) {
          expression (this)
        }
      }
    }
  }
}