input-view {
  match {
    Sport (this)
  }

  render {
    selection-of (this) {
      navigation-mode {
        read-many {
          page-size (size(this))
          page-content {
            underflow-statement (This is the first page)
            item-selection-question (Select a sport.)
            overflow-statement (This is the last page)
            overflow-question (What would you like to do?)
          }
        }
      }
      select-button-text ("Select")
      where-each (this) {
        spoken-summary ("#{value(this)}.")
        cell-card {
          slot2 {
            content {
              primary ("#{value(this)}")
            }
          }
        }
      }
    }
  }
}